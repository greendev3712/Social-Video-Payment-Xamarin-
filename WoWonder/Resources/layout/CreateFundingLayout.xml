<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    android:background="?attr/colorFill">
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
					android:id="@+id/ll_step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:visibility="visible">
					<ImageView
						android:layout_width="200dp"
						android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
						android:src="@drawable/fraiser_1"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
						android:text="@string/Lbl_StepOneTellUs"
						android:textSize="18sp"
                        android:textStyle="bold"
						android:textColor="@color/accent"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
						android:text="@string/Lbl_PleaseProvideNumberAddress"
						android:textSize="15sp"
						android:textColor="@color/accent"/>
                    <EditText
                        android:id="@+id/et_fraiser_name"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/Lbl_Name"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/round_gray_border"/>
                    <EditText
                        android:id="@+id/et_street_address"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/Lbl_StreetAddress"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/round_gray_border"/>
                    <EditText
                        android:id="@+id/et_phone_number"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/Lbl_PhoneNumberHint"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/round_gray_border"/>
                </LinearLayout>
                <LinearLayout
					android:id="@+id/ll_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:visibility="gone">
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="200dp"
						android:src="@drawable/fraiser_2"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
						android:text="@string/Lbl_StepTwoTellUs"
						android:textSize="18sp"
                        android:textStyle="bold"
						android:textColor="@color/accent"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
						android:text="@string/Lbl_FundraisingFor"
						android:textSize="15sp"
						android:textColor="@color/accent"/>
					<TextView
						android:id="@+id/tv_fundraise_category"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
						android:background="@drawable/round_gray_border"
						android:paddingStart="15dp"
						android:paddingEnd="7dp"
						android:paddingTop="7dp"
						android:paddingBottom="7dp"
						android:drawableEnd="@drawable/ic_arrow_down_24dp"
						android:textSize="14sp"
						android:text="@string/Lbl_ChooseCategory"
						android:textColor="#8C8C8C"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_HowMuchRaise"
                        android:layout_marginTop="20dp"
						android:textSize="15sp"
						android:textColor="@color/accent"/>
                    <EditText
                        android:id="@+id/AmountEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/Lbl_EnterAmountHere"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:inputType="number"
                        android:background="@drawable/round_gray_border"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_AmountDescribe"
                        android:layout_marginTop="10dp"
						android:textSize="11sp"
						android:textColor="@color/grey"/>
                </LinearLayout>
                <LinearLayout
					android:id="@+id/ll_step3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:visibility="gone">
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="200dp"
						android:src="@drawable/fraiser_3"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
						android:text="@string/Lbl_StepThreeTellUs"
						android:textSize="18sp"
                        android:textStyle="bold"
						android:textColor="@color/accent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/accent"
                        android:text="@string/Lbl_FundraiserTitle"/>
                    <EditText
                        android:id="@+id/TitleEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:hint="@string/Lbl_DonateToHelp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/round_gray_border"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/accent"
                        android:text="@string/Lbl_FundrasingContent"/>
                    <EditText
                        android:id="@+id/DescriptionEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_gray_border"
                        android:hint="@string/Lbl_FundrasingContentHint"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp"
                        android:inputType="textMultiLine"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <LinearLayout
					android:id="@+id/ll_step4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:visibility="gone">
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="200dp"
						android:src="@drawable/fraiser_4"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
						android:text="@string/Lbl_StepFourTellUs"
						android:textSize="18sp"
                        android:textStyle="bold"
						android:textColor="@color/accent"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/round_gray_border">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fundingCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="4dp"/>
                        <ImageView
                            android:id="@+id/btn_selectimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_plus_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/btn_selectimage"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textColor="#8c8c8c"
                            android:text="@string/Lbl_UploadFundraiserPhoto"/>
                    </RelativeLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateFunding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="@drawable/round_button_pressed"
                    android:textColor="@color/gnt_white"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lb_onboarding_accessibility_next"
                    android:visibility="visible"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>