<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ToolbarTheme"
            app:title="@string/Lbl_Update_Data_Group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 1/3"
                    android:textSize="15sp"
                            />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View
                        android:id="@+id/view_step1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="3dp"
                        android:background="#C6CBC7"/>
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view_step2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="3dp"
                        android:background="#C6CBC7"/>
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view_step3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="3dp"
                        android:background="#C6CBC7"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="?attr/colorDivider"
                android:layout_height="5dp"/>
            <LinearLayout
                android:id="@+id/ll_step1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="start">
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/circlegradient"
                        android:tint="@color/accent" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_MediaFile"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_CompanyName"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/NameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <ImageView
	                android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" 
                    android:layout_marginTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:src="@drawable/grey_offline" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorBubble" />
                <TextView
	                android:id="@+id/ChooseImageText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/Lbl_ChooseImage"
                    android:textSize="15sp"
                    android:gravity="center"
					android:textStyle="bold"
                    android:textColor="#888888"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_step2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="start"
                android:visibility="gone">
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/circlegradient"
                        android:tint="@color/accent" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Details"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_CampaignTitle"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/TitleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_CampaignDescription"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/DescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:inputType="textCapWords|textMultiLine"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Start_Date"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/StartDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_End_Date"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/EndDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_website"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/WebsiteEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_MyPages"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/MyPagesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_step3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="start"
                android:visibility="gone">
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/circlegradient"
                        android:tint="@color/accent" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Targeting"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Location"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/LocationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Audience"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/AudienceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Gender"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/GenderEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Placement"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/PlacementEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_CampaignBudget"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/BudgetEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Bidding"
                    android:textSize="15sp"
                    android:textColor="@color/accent"/>
                <EditText
                    android:id="@+id/BiddingEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_margin="20dp"
                android:background="@drawable/follow_button_profile_friends_pressed"
                android:textSize="14sp"
                android:textColor="@color/gnt_white"
                android:text="@string/lb_onboarding_accessibility_next"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            <com.google.android.gms.ads.doubleclick.PublisherAdView
                android:id="@+id/multiple_ad_sizes_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
                app:adUnitId="@string/banner_multiple_ad_sizes_id" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
