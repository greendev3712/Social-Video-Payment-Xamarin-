<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 	xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_container"
    android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:layout_margin="5dp"  
    android:visibility="gone"
    app:cardBackgroundColor="?attr/colorBubble"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:padding="7dp" >
		<ImageView
			android:id="@+id/Image"
			android:scaleType="centerCrop"
			android:layout_width="130dp"
			android:layout_height="80dp"
			android:focusable="false"
			android:clickable="false"
			android:src="@drawable/ImagePlacholder"
			android:focusableInTouchMode="false" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:layout_gravity="center">
			<TextView
				android:id="@+id/url"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:text="PLAYTUBESCRIPT.COM"
				android:textColor="#777777"
				android:textStyle="bold"
				android:lines="1"
				android:textSize="13dp" />
			<TextView
				android:id="@+id/Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="none"
				android:lines="2"
				android:text="PlayTube - The Ultimate PHP Video CMS Video Sharing Platform"
				android:textSize="12dp"
				android:layout_marginTop="5dp" />
		</LinearLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>