<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_HowItWorks"
					android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
					android:textAlignment="center"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_HIWContent"
                    android:layout_marginTop="20dp"
					android:textSize="12sp"/>
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
					android:src="@drawable/fundraiser"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
				        <ImageView
					        android:layout_width="60dp"
					        android:layout_height="60dp"
					        android:src="@drawable/fundraise_icon1"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="center"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_TellUsAboutYourself"
						    android:textSize="14sp"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_FullName"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_PhysicalAddress"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_ContactDetials"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="wrap_content"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_HavePaypalBank"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
						android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
				        <ImageView
					        android:layout_width="60dp"
					        android:layout_height="60dp"
					        android:src="@drawable/fundraise_icon2"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="center"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_DescribeYourFundraiser"
						    android:textSize="14sp"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_IntroductionExplainSituation"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_MoneyNeed"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_UseMoney"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_UploadPhotoVideo"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
						android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
				        <ImageView
					        android:layout_width="60dp"
					        android:layout_height="60dp"
					        android:src="@drawable/fundraise_icon3"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="center"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_PromoteFundraiser"
						    android:textSize="14sp"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
						    android:text="@string/Lbl_SendLinkEmail"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_SendLinkTexts"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_SendLinkCall"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
					    <TextView
						    android:layout_width="match_parent"
							android:textAlignment="textStart"
						    android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
						    android:text="@string/Lbl_PostSocialMediaSite"
						    android:textSize="10sp"
						    android:textColor="@color/gnt_gray"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>