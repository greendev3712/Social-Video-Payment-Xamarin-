<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="wrap_content">
	<!--Head Page -->
	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<ImageButton
			android:id="@+id/ib_back"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginStart="15dp"
			android:background="@null"
			android:src="@drawable/ic_cancel"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textColor="@color/accent"
			android:text="@string/Lbl_FilterPost"
			android:layout_marginStart="25dp"/>
	</LinearLayout>
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical"
		android:layout_below="@id/header"
		android:layout_above="@id/pre_footer">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="25dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_DiscoverPosts"
					android:textSize="16sp" />
				<RadioGroup
					android:layout_marginTop="10dp"
					android:layout_centerVertical="true"
					android:layout_width="match_parent"
					android:gravity="start"
					android:layout_gravity="start"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<RadioButton
						android:id="@+id/radioAllPeople"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="start|center"
						android:layout_gravity="start|center"
						android:textSize="14sp"
						android:text="@string/Lbl_All"/>
					<RadioButton
						android:id="@+id/radioPeople_i_Follow"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="start|center"
						android:layout_gravity="start|center"
						android:text="@string/Lbl_People_i_Follow"
						android:textSize="14sp"/>
				</RadioGroup>
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="25dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_PostType"
					android:textSize="16sp" />
				<RadioGroup
					android:layout_marginTop="10dp"
					android:layout_width="match_parent"
					android:gravity="start"
					android:layout_gravity="start"
					android:layout_height="wrap_content"
					android:orientation="vertical">
                   <LinearLayout
						android:layout_marginBottom="0dp"
						android:layout_width="match_parent"
						android:gravity="center"
						android:layout_gravity="center"
						android:weightSum="4"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
                        <RadioButton
                        android:id="@+id/radioAllPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:layout_gravity="start|center"
                        android:textSize="14sp"
                        android:text="@string/Lbl_All"/>
						<RadioButton
							android:id="@+id/radioText"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:text="@string/text"
							android:textSize="14sp"/>
						<RadioButton
							android:id="@+id/radioImage"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:textSize="14sp"
							android:text="@string/image"/>
						<RadioButton
							android:id="@+id/radioVideo"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:text="@string/video"
							android:textSize="14sp" />
					</LinearLayout>
					<LinearLayout
						android:layout_marginBottom="0dp"
						android:layout_width="match_parent"
						android:weightSum="3"
						android:gravity="center"
						android:layout_gravity="center"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<RadioButton
							android:id="@+id/radioFile"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:text="@string/Lbl_File"
							android:textSize="14sp" />
						<RadioButton
							android:id="@+id/radioMusic"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:textSize="14sp"
							android:text="@string/Lbl_Music"/>
						<RadioButton
							android:id="@+id/radioMap"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start|center"
							android:layout_gravity="start|center"
							android:text="@string/Lbl_Map"
							android:textSize="14sp" />
					</LinearLayout>
				</RadioGroup> 
			</LinearLayout>
			<LinearLayout
				android:id="@+id/pre_footer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_above="@id/footer"
				android:gravity="center_vertical"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="30dp">
				<TextView
					android:id="@+id/Clearbutton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Clear"
					android:textSize="16sp"
					android:textColor="@drawable/text_selector"
					android:layout_marginEnd="30dp" />
				<androidx.appcompat.widget.AppCompatButton
					android:id="@+id/ShowResultbutton"
					android:background="@drawable/round_button_pressed"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="@string/Lbl_ShowResult"
					android:textColor="@android:color/white"
					android:textAllCaps="false"
					android:textSize="16sp"
					android:clickable="true"/>
			</LinearLayout>
			<View
				android:id="@+id/footer"
				android:layout_height="?android:attr/actionBarSize"
				android:layout_width="match_parent" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView> 
</RelativeLayout>