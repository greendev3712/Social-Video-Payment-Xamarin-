<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/card_pro_pic"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/no_profile_image_circle"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:drawablePadding="4dp"
            android:textSize="@dimen/msg_text_primary" />
        <TextView
            android:id="@+id/card_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    android:maxWidth="190dp"
            android:maxLines="1"
            android:lines="1"
            android:layout_marginTop="4.5dp"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/msg_text_secondary" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Accept"
                android:textSize="@dimen/msg_text_secondary"
                android:drawableStart="@drawable/ic_circle_check"
                android:drawableTint="@color/primary"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Lbl_Delete"
                android:textSize="@dimen/msg_text_secondary"
                android:drawableStart="@drawable/ic_dialog_close_light"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                />
        </LinearLayout> 
    </LinearLayout>
</LinearLayout>